<body class="tea-body">
<h1 id="welcome-user">Welcome To Your Tea Tree, {{user.name}}!</h1>



<a href='/teas'>
<button>See All Teas</button>
</a>

<main id="all-teas">
    {{#each user.tea}}
    <div class="card-deck border border-info shadow p-3 mb-5 bg-white rounded" style="width: 30rem;">
        <img src="{{img}}">
        <div class="card-body">
            <h5 class="card-title">{{typeOfTea}}</h5>
            <p class="card-text">{{mood}}</p>
            <p>{{caffiene_content}}</p>
            <a href="/user/{{../user._id}}/tea/{{_id}}" class="btn btn-primary">Select This Tea</a>
        </div>
    </div>
    {{/each}}
</main> 

<form id="delete-user" action="/user/{{user._id}}?_method=DELETE" method="POST">
<button type='submit' class="btn btn-light" id="enter-button">Delete Your Tree</button>
</form>

<a href="/user/{{user.id}}/update">
    <button>Update This User</button>
</a>
<!--goes back to home page-->
<button class="btn btn-light" id="enter-button">
<a href="/">Return to Home Page</a>
</button>
</body>